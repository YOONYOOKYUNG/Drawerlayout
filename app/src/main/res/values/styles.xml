<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--타이틀바 투명하게 적용-->
    <style name="TranslucentStatusBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/TranslucentActionBar</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
        <style name="TranslucentActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>
<!-- 끝 -->
    <style name="AppTheme.help" parent="Theme.AppCompat.Light.NoActionBar">


        <item name="android:windowIsTranslucent">true</item>
        
        <!--  백그라운드 투명 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--  타이틀바의 그림자 제거 -->
        <item name="android:windowContentOverlay">@null</item>

        <!--Titlebar 없애는 옵션   true : Titlebar x / false : Titlebar o -->
        <item name="android:windowNoTitle">true</item>



        <!--  다이얼로그 외의 화면을 어둡게 할껀지 말껀지 -->
        <!--   true - 반투명 검정 /  false - 완전 투명  -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
