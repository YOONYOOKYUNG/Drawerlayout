<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:background="@drawable/shape"
    android:padding="10dp"
    android:layout_margin="30dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="227dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="불쾌지수"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="보통"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="  % "
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/con3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/humidity" />
        </LinearLayout>

        <TableLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TableRow>

                <TextView
                    android:layout_width="67dp"
                    android:background="@drawable/condition_good"
                    android:gravity="center"
                    android:text="낮음"
                    android:textColor="#FFF" />
                <TextView
                    android:layout_width="67dp"
                    android:background="@drawable/condition_soso"
                    android:gravity="center"
                    android:text="보통"
                    android:textColor="#FFF" />

                <TextView
                    android:layout_width="67dp"
                    android:background="@drawable/condition_littlebad"
                    android:gravity="center"
                    android:text="높음"
                    android:textColor="#FFF" />

                <TextView
                    android:layout_width="67dp"
                    android:background="@drawable/condition_bad"
                    android:gravity="center"
                    android:text="매우높음"
                    android:textColor="#FFF" />
            </TableRow>

        </TableLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pointgood"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="29dp"
                android:src="@drawable/triangle2" />

            <ImageView
                android:id="@+id/pointsoso"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="45dp"
                android:src="@drawable/triangle2" />

            <ImageView
                android:id="@+id/pointlittlebad"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="43dp"
                android:src="@drawable/triangle2" />
            <ImageView
                android:id="@+id/pointbad"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginLeft="45dp"
                android:src="@drawable/triangle2" />
        </LinearLayout>


        <TextView
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:text="설명"/>
        <TextView
            android:textSize="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text3"
            android:text="설명"/>
        <Button
            android:id="@+id/popup3_close"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="10dp"
            android:background="@drawable/button1"
            android:text="닫기"
            android:textColor="#FFF" />
    </LinearLayout>


</LinearLayout>