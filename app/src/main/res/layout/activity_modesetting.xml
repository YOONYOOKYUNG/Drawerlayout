<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutoSetActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#B7DBF4">
        <ImageView
            android:id="@+id/backarrow"
            android:src="@drawable/backarrow1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모드 설정"
            android:textColor="#FFF"
            android:textSize="22dp"/>
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/rl"
    android:layout_below="@id/toolbar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv1"
        android:text="모드 설정"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED"
        android:padding="10dp"/>
        <LinearLayout
            android:layout_below="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/manual_mode"
                android:text="수동 모드"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:background="@drawable/modebtn"/>
            <Button
                android:id="@+id/auto_mode"
                android:text="자동 모드"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:background="@drawable/modebtn"
                android:layout_toRightOf="@+id/manual_mode"/>
        </LinearLayout>
</RelativeLayout>
    <View
        android:id="@+id/view_2"
        android:background="#EDEDED"
        android:layout_below="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="2dp"/>
    <LinearLayout
        android:id="@+id/manual_layout"
        android:layout_below="@id/view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDEDED"
            android:padding="10dp"
            android:text="커스텀 모드 설정"
            android:textSize="15dp" />
            <ImageView
                android:id="@+id/question"
                android:src="@drawable/question3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/window_img"
            android:layout_below="@+id/view_2"
            android:src="@drawable/window_open"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"/>
        <TextView
            android:text="수동 모드로 설정되었습니다. \n 창문 설정 화면에서 창문을 개폐하실 수 있습니다."
            android:textSize="15dp"
            android:gravity="center"
            android:layout_below="@+id/window_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
        <Button
            android:id="@+id/goWindowbtn"
            android:text="창문 설정 하러가기"
            android:background="@drawable/modebtn"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/auto_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_2"
        android:visibility="invisible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv3"
            android:text="자동 모드 설정"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDEDED"
            android:padding="10dp" />
            <ImageView
                android:id="@+id/question2"
                android:src="@drawable/question3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt4"
            android:text="자동 모드로 설정되었습니다.\n 설정된 수치에 따라 창문을 자동 개폐합니다. \n자세한 방법을 알고싶으면 우측 상단 물음표 아이콘을 눌러주세요!"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
        <View
            android:id="@+id/view_3"
            android:layout_below="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="#EDEDED"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/set_dust"
            android:text="수치 설정하기"
            android:layout_margin="8dp"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_3"/>
        <RelativeLayout
            android:id="@+id/dustbtn"
            android:layout_below="@id/set_dust"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">
            <TextView
                android:id="@+id/low_dust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미세먼지 개폐 수치 설정하기"
                android:gravity="center"/>
            <TextView
                android:id="@+id/dust_txt"
                android:textSize="30dp"
                android:layout_below="@+id/low_dust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tempLow_btn"
            android:layout_below="@id/dustbtn"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <TextView
                android:id="@+id/low_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최저 온도 설정하기"
                android:gravity="center"/>
            <TextView
                android:id="@+id/low_temp_txt"
                android:textSize="30dp"
                android:layout_below="@+id/low_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tempHigh_btn"
            android:layout_below="@id/tempLow_btn"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">
            <TextView
                android:id="@+id/high_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최고 온도일 때 닫기"/>
            <TextView
                android:id="@+id/high_temp_txt"
                android:textSize="30dp"
                android:layout_below="@+id/high_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>