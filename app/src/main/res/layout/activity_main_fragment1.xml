<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Main_Fragment1"
    android:id="@+id/frag">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/fragment1">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tvdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textColor="@color/colorFont"
            android:layout_below="@+id/main_icon"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/therlayout"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/main_layout_shape"
            android:layout_below="@id/tvdate"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/main_thermometer"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="온도"
                android:textColor="#5e5e5e"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/thermometer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text1"
                android:text="00"
                android:textColor="@color/colorFont"
                android:textStyle="bold"
                android:textSize="25dp" />

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/thermometer1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="℃"
                android:textColor="@color/colorFont"
                android:textSize="20dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dustlayout"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/main_layout_shape"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/therlayout"
            >

            <ImageView
                android:id="@+id/img2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/main_dust"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:text="미세먼지"
                android:textColor="#5e5e5e"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/micro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text2"
                android:text="00"
                android:textColor="@color/colorFont"
                android:textStyle="bold"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/micro1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="㎍/㎥"
                android:textColor="@color/colorFont"
                android:textSize="20dp" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/humidlayout"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/main_layout_shape"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dustlayout"
            >

            <ImageView
                android:id="@+id/img3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/main_drop"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="습도"
                android:textColor="#5e5e5e"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/humid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text3"
                android:text="00"
                android:textColor="@color/colorFont"
                android:textStyle="bold"
                android:textSize="25dp" />

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/humid1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="%"
                android:textColor="@color/colorFont"
                android:textSize="19dp" />


        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>