<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <RelativeLayout
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/text_timeline"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="13dp"
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="10월 23일" />

        <TextView
            android:layout_below="@+id/txt_date"
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="오전 12시 30분" />
    </RelativeLayout>

    <ImageView
            android:id="@+id/item_openclose"
            android:layout_width="64dp"
            android:layout_height="88dp"
            android:src="@drawable/timelineitem_open"
            android:layout_toRightOf="@id/text_timeline"
            android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/rl_alert"
        android:layout_toRightOf="@id/item_openclose"
        android:background="@drawable/main_layout_shape"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_width="270dp"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/txt_content"
            android:text="(내용)"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>