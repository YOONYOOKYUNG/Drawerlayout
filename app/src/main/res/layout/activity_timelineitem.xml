<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_date"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9/18 15:00" />


        <ImageView
            android:id="@+id/item_openclose"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/timelineitem_open"
            android:layout_toRightOf="@id/txt_date"
            android:layout_centerVertical="true"/>




    <RelativeLayout
        android:id="@+id/rl_alert"
        android:layout_toRightOf="@id/item_openclose"
        android:background="@drawable/main_layout_shape"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_width="270dp"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/txt_window"
            android:text="(창문 이름)"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ga"
            android:text=" 을(를) "
            android:layout_toRightOf="@id/txt_window"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="열었습니다/닫았습니다"
            android:layout_toRightOf="@id/ga"/>

        <TextView
            android:id="@+id/txt_cause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_window"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>
</RelativeLayout>