<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/address_map"
    tools:context=".AddressActivity">


    <LinearLayout
        android:layout_above="@+id/add1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/location2"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:src="@drawable/location2" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/location2"
            android:text="어디에 거주하시나요?"
            android:textSize="30dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/add1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/add2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1"
            android:text=" 지역 1"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <Spinner
            android:textAlignment="center"
            android:layout_toRightOf="@+id/tv1"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:id="@+id/spinner1"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_above="@id/btn_address_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv2"
            android:text=" 지역 2"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <Spinner
            android:textAlignment="center"
            android:layout_toRightOf="@+id/tv2"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:id="@+id/spinner2" />

    </RelativeLayout>

    <Button
        android:background="@drawable/modebtn"
        android:id="@+id/btn_address_search"
        android:layout_margin="25dp"
        android:layout_centerInParent="true"
        android:text="주소 등록"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>