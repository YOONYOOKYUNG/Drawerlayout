<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/main_popup_shape_round"
    style="@style/Transparent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="22dp"
        android:text="창문 추가하기"
        android:textColor="#000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/messagse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:layout_below="@+id/title"
        android:hint="창문 이름을 입력하세요." />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/messagse">

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_popup_shape_round"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="확인"
            android:textColor="#FFF"
            android:textSize="16dp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="취소"
            android:textColor="#FFF"
            android:textSize="16dp"
            android:background="@drawable/main_popup_shape_round"
            android:backgroundTint="#CCCBCB"
            android:layout_toRightOf="@id/okButton"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</RelativeLayout>