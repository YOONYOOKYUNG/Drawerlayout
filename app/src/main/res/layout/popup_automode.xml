<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:background="@drawable/main_popup_shape_round"
    android:padding="10dp"
    android:layout_margin="30dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/title1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="창문을 자동개폐 했습니다."
        android:textColor="#3A3535"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/con1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/title1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/window_icon" />

    <TextView
        android:id="@+id/sentence1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/con1"
        android:text="비가 와서 "
        android:textColor="#000"
        android:textSize="19dp" />


    <TextView
        android:id="@+id/sentence2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/con1"
        android:layout_below="@id/sentence1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:text="창문을 닫았습니다."
        android:textColor="#000"
        android:textSize="19dp" />

    <Button
        android:id="@+id/popup_close"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button1"
        android:text="닫기"
        android:textSize="16dp"
        android:textColor="#FFF"/>


</RelativeLayout>