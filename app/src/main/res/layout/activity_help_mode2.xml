<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".HelpMode2Activity">
    <ImageView
        android:id="@+id/cancel1"
        android:src="@drawable/help_cancel"
        android:layout_alignParentEnd="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/touch1"
        android:src="@drawable/help_touch"
        android:layout_toLeftOf="@+id/cancel1"
        android:layout_marginRight="30dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"/>
    <TextView
        android:text="자동모드로 설정합니다."
        android:layout_below="@id/touch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/cancel1"
        android:textColor="#fff"
        android:layout_marginTop="5dp"/>

    <TextView
        android:text="Tip"
        android:id="@+id/tip"
        android:layout_below="@id/touch1"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tip3"
        android:layout_below="@+id/tip"
        android:text="1. 겨울철에는 바깥과 5도 이상 차이 나지 않도록 실내온도를 25도 안팎으로 유지하는게 좋습니다."
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tip4"
        android:layout_below="@+id/tip3"
        android:text="2. 여름철 권장 실내 온도는 26도 내외로 냉방 시 실내와 외부의 온도 차이가 5도 내외 정도로만 차이나도록 설정하는 게 좋습니다."
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/touch5"
        android:src="@drawable/help_touch"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <TextView
        android:text="클릭시, 창문을 개폐 할 미세먼지 수치를 설정할 수 있습니다."
        android:layout_below="@+id/touch5"
        android:layout_toRightOf="@+id/touch5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>
    <ImageView
        android:id="@+id/touch6"
        android:src="@drawable/help_touch"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:text="클릭시, 창문을 닫을 최저 온도와 최고 온도를 \n설정할 수 있습니다."
        android:layout_below="@id/touch6"
        android:layout_marginRight="10dp"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/touch5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>