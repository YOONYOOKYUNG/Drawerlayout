<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="#FFF">

    <ImageView
        android:id="@+id/warn_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/popup4_waring_icon_5"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재"
            android:textSize="20dp"
            android:layout_below="@+id/warn_icon"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/warn_icon"
            android:layout_toRightOf="@+id/txt1"
            android:layout_marginLeft="10dp"
            android:text="Auto Mode모드"
            android:textColor="#FF0000"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/warn_icon"
            android:layout_toRightOf="@+id/txt2"
            android:text="로 설정되어있습니다."
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@+id/txt1"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="        수동으로 창문을 열거나 닫고 싶다면\n     메인화면의 설정창에서 변결할 수 있습니다."
            android:layout_gravity="center_horizontal"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button1"
            android:textColor="#FFF"
            android:id="@+id/closewar"/>

</RelativeLayout>
