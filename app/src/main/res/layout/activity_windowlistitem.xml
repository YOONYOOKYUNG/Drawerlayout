<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/windowbtnback"
        android:background="@drawable/windowname_open"

        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/main_label"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:textSize="20dp"
            android:text="Title"
            android:textColor="#373535"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/address"
            android:layout_marginLeft="20dp"
            android:textSize="10dp"
            android:text="Title"
            android:visibility="invisible"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </TextView>

        <ImageButton
            android:id="@+id/windowstate"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/window_open_wh" />
        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/windowlist_deleteicon"
            android:id="@+id/windowdelete"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

    </FrameLayout>
</RelativeLayout>